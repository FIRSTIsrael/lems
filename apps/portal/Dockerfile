# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build frontend`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t frontend`.
FROM node:22.10.0-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

ARG BASE_URL
ENV LOCAL_BASE_URL=$BASE_URL
ARG NEXT_PUBLIC_BASE_URL
ENV NEXT_PUBLIC_BASE_URL=$NEXT_PUBLIC_BASE_URL

WORKDIR /app

RUN addgroup -S lems && adduser -S portal -G lems

COPY dist/apps/portal portal
RUN chown -R portal:lems .

# TODO: use nextjs's output: standalone when they support it.
# Currently it has a bug with NX that is unresolved.
# The result is slimming the docker from 1.7GB to 300MB

WORKDIR /app/portal
RUN npm i --omit=dev

EXPOSE 3000

CMD [ "npm", "start" ]
